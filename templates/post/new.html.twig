{% extends 'base.html.twig' %}

{% block body %}
<article>
    <h1 class="mt-3">{{ foro.nombre }}</h1>
    <p>{{ foro.descripcion }}</p>
    <div class="separador"></div>

    {{ form_start(form) }}
        <div class="mb-2">
            {{ form_label(form.categoria, 'Categor√≠a', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.categoria, {'attr': {'class': 'form-select', 'onchange': 'toggleContentFields()'}}) }}
        </div>
        <div class="mb-2">
            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-2">
            {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control tinymce'}}) }}
        </div>
        <div class="mb-2 mt-3">
            <button class="btn btn-primary mr-3">Publicar</button>
            <a href="{{ path('post_index') }}" class="btn btn-secondary ml-3">Volver al listado de posts</a>
        </div>
    {{ form_end(form) }}
</article>
{% endblock %}
