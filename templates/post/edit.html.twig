{% extends 'base.html.twig' %}

{% block body %}
<article>
    <h1 class="mt-3">Eitar Post</h1>
    <div class="separador"></div>

    {{ form_start(form) }}
        <div class="mb-2">
            {{ form_label(form.categoria, 'Categoría', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.categoria, {'attr': {'class': 'form-select', 'onchange': 'toggleContentFields()'}}) }}
        </div>
        <div class="mb-2">
            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-2">
            {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control tinymce'}}) }}
        </div>
        <div class="mt-3">
            <button class="btn btn-primary mr-3">Guardar cambios</button>
        </div>
    {{ form_end(form) }}

    <div class="mb-2">
        {{ form_start(delete_form) }}
            <button class="btn btn-danger mt-3" onclick="return confirm('¿Estás seguro de que deseas eliminar este post?');">
                Eliminar Post
            </button>
        {{ form_end(delete_form) }}
    </div>
    <div class="mb-3 mt-3">
        <a href="{{ path('post_index') }}" class="btn btn-secondary">Volver al listado de posts</a>
    </div>

</article>
{% endblock %}
