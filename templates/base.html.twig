                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin') }}" title="Panel de administrador">Administrador</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}" title="Salir">Salir</a>
                        </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}" title="Ingresar">Ingresar</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
