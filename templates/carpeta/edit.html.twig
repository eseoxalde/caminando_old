{% extends 'base.html.twig' %}

{% block title %}Crear Nueva Carpeta{% endblock %}

{% block body %}
 {% for carpet in carpeta %}
    {{ carpet }}
 {% endfor %}

 <article class="row">
    <div class="col-md-6">
        <h1>Cambiar nombre y descripción</h1>
        <div class="separador"> </div>
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.nombre, 'Nuevo nombre: ') }}
                {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.descripcion, 'Nueva descripción: ') }}
                {{ form_widget(form.descripcion, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        {{ form_end(form) }}
    <div class="mt-3">
        <a href="{{ path('carpeta_index') }}" class="btn btn-secondary">Volver a la lista</a>
    </div>
    </div>
</article>
{% endblock %}
